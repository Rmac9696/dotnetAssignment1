@model DOTNET_lab4.Models.ViewModels.CommunityAdvertViewModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/shared/__Layout.cshtml";
}

<h1>Show ads for: @Model.Community.Title</h1>

<p>
    <a asp-action="Upload" asp-route-id="@Model.Community.ID">Create New</a><br>
    <a asp-action="Index" asp-controller="Communities">Back to List</a>
    <hr>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                File Name
            </th>
            <th>
                Url
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Advertisements) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                <img src="@item.Url" style="max-width:400px;"  />
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
